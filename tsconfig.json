{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ],
      "@/services/*": [
        "src/services/*"
      ],
      "@/shared": [
        "shared/index.ts"
      ],
      "@/shared/*": [
        "shared/*"
      ],
      "@/sharedLib/*": [
        "sharedLib/*"
      ],
      "@/lib/*": [
        "src/lib/*"
      ],
      "@server/*": [
        "server/src/*"
      ]
    }
  },
  "include": [
    "src",
    "electron",
    "shared",
    "server"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}